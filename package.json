{
    "name": "recetario-magico",
    "version": "2.0.0",
    "private": true,
    "description": "Aplicaci贸n web moderna para gesti贸n de recetas, planificaci贸n de comidas y listas de compras. Optimizada para rendimiento y experiencia de usuario.",
    "keywords": [
        "recipes",
        "cooking",
        "meal-planning",
        "shopping-list",
        "react",
        "tailwindcss",
        "pwa"
    ],
    "homepage": "https://edwinpantojab.github.io/recetario-app",
    "author": {
        "name": "Sistema de gesti贸n de recetas",
        "email": "recetario@magico.app"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/edwinpantojab/recetario-app.git"
    },
    "bugs": {
        "url": "https://github.com/edwinpantojab/recetario-app.git/issues"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "gtag": "^1.0.1",
        "lucide-react": "^0.395.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-scripts": "5.0.1",
        "sharp": "^0.34.2",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.13",
        "autoprefixer": "^10.4.19",
        "cross-env": "^7.0.3",
        "cssnano": "^7.0.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "gh-pages": "^6.3.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.38",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.2.5",
        "rimraf": "^6.0.1",
        "tailwindcss": "^3.4.4"
    },
    "scripts": {
        "start": "cross-env REACT_APP_ENV=development react-scripts start",
        "start:fast": "cross-env FAST_REFRESH=true GENERATE_SOURCEMAP=true react-scripts start",
        "start:analyze": "cross-env ANALYZE=true npm run start",
        "build": "cross-env NODE_ENV=production react-scripts build",
        "build:analyze": "cross-env ANALYZE=true REACT_APP_ENV=production react-scripts build",
        "build:profile": "cross-env REACT_APP_PROFILE=true npm run build",
        "test": "cross-env NODE_ENV=test react-scripts test --watchAll=false",
        "test:watch": "cross-env NODE_ENV=test react-scripts test",
        "test:coverage": "cross-env NODE_ENV=test react-scripts test --coverage --watchAll=false",
        "test:ci": "cross-env CI=true npm run test:coverage",
        "eject": "react-scripts eject",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
        "lint:check": "eslint src --ext .js,.jsx,.ts,.tsx",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "tailwind:build": "tailwindcss -i ./src/index.css -o ./dist/output.css",
        "tailwind:watch": "tailwindcss -i ./src/index.css -o ./dist/output.css --watch",
        "tailwind:minify": "tailwindcss -i ./src/index.css -o ./dist/output.css --minify",
        "css:purge": "postcss src/index.css -o dist/output.css",
        "deps:check": "npm audit --audit-level=moderate",
        "deps:update": "npm update",
        "deps:outdated": "npm outdated",
        "clean": "npx rimraf build dist node_modules/.cache",
        "clean:build": "npx rimraf build",
        "clean:deps": "npx rimraf node_modules package-lock.json && npm install",
        "prepare": "husky install",
        "precommit": "lint-staged",
        "prebuild": "npm run clean:build",
        "postbuild": "echo 'Build completed successfully!'",
        "serve": "npx serve -s build -l 3000",
        "serve:https": "npx serve -s build -l 3000 --ssl",
        "dev": "npm-run-all --parallel start tailwind:watch",
        "dev:clean": "npm run clean && npm run dev",
        "prod:preview": "npm run build && npm run serve",
        "prod:test": "npm run build && npm run test:ci",
        "deploy:force": "gh-pages -d build -f"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "eslint:recommended",
            "prettier"
        ],
        "plugins": [
            "react-hooks",
            "jsx-a11y"
        ],
        "rules": {
            "react-hooks/rules-of-hooks": "error",
            "react-hooks/exhaustive-deps": "warn",
            "jsx-a11y/anchor-is-valid": "warn",
            "no-unused-vars": "warn",
            "no-console": "warn",
            "prefer-const": "error",
            "no-var": "error"
        },
        "overrides": [
            {
                "files": [
                    "**/*.test.js",
                    "**/*.test.jsx"
                ],
                "env": {
                    "jest": true
                }
            }
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": false,
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "src/**/*.{json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test:ci"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all",
            "not ie 11",
            "not chrome < 60",
            "not firefox < 60",
            "not safari < 12"
        ],
        "development": [
            "last 2 chrome version",
            "last 2 firefox version",
            "last 2 safari version",
            "last 2 edge version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/reportWebVitals.js",
            "!src/**/*.test.{js,jsx}",
            "!src/**/*.stories.{js,jsx}"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "optionalDependencies": {
        "fsevents": "^2.3.3"
    },
    "resolutions": {
        "webpack": "^5.88.0",
        "react-error-overlay": "6.0.9"
    },
    "packageManager": "npm@8.19.0"
}
